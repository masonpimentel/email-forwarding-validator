#!/bin/bash

r1=$(pgrep -f send.py)
r2=$(pgrep -f receive.py)

# repo_path variable added here by config script
{repo_path_cmd}

cd $repo_path

invoker=$(src/invoker)

cd $repo_path/src
if [ -z $r1 ] || [ -z $r2 ]; then
    if [ -z $r1 ]; then
        $invoker -u timedate.py "1" >> ../output.txt
    fi

    if [ -z $r2 ]; then
        $invoker -u timedate.py "2" >> ../output.txt
    fi

    $invoker -u timedate.py "3" >> ../output.txt
    ../kill
    ../send/start $invoker &
    ../receive/start $invoker &
else
    $invoker -u timedate.py "4" >> ../output.txt
fi
